<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 配置Job类 -->
	<bean id="crawlerExecutor" class="com.yunziru.movie.crawler.CrawlerExecutor"/>
	<bean id="siteMapExecutor" class="com.yunziru.sitemap.SiteMapCreater"/>

	<!-- 配置JobDetail -->
	<bean id="crawlerMethod" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<!-- 执行目标job -->
		<property name="targetObject" ref="crawlerExecutor"/>
		<!-- 要执行的方法 -->
		<property name="targetMethod" value="execute"/>
	</bean>

	<!-- 配置trigger触发器 -->
	<bean id="crawlerFactoryBean" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<!-- jobDetail -->
		<property name="jobDetail" ref="crawlerMethod"/>
		<!-- cron表达式，执行时间  每5秒执行一次 -->
		<property name="cronExpression" value="0 0 0/6 * * ?"/>
	</bean>

	<!-- 配置JobDetail -->
	<bean id="siteMapMethod" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<!-- 执行目标job -->
		<property name="targetObject" ref="siteMapExecutor"/>
		<!-- 要执行的方法 -->
		<property name="targetMethod" value="execute"/>
	</bean>

	<!-- 配置trigger触发器 -->
	<bean id="siteMapFactoryBean" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<!-- jobDetail -->
		<property name="jobDetail" ref="siteMapMethod"/>
		<!-- cron表达式，执行时间  每5秒执行一次 -->
		<property name="cronExpression" value="0 0 0/6 * * ?"/>
	</bean>

	<!-- 配置调度工厂 -->
	<bean id="springJobSchedulerFactoryBean" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="crawlerFactoryBean"/>
				<ref bean="siteMapFactoryBean"/>
			</list>
		</property>

	</bean>
</beans>